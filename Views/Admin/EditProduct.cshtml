@model trasua_web_mvc.Dtos.CreateProductDto;

@{
    ViewBag.Title = "Sửa Sản phẩm";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<div class="pd-ltr-20">


    <div class="card-box mb-30">
        <div class="container">
            <h2 class="my-4">Thêm Đồ Uống</h2>
            <form action="createProduct" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="drinkName">Tên Đồ Uống:</label>
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                </div>

                <div class="form-group">
                    <label for="drinkDescription">Mô Tả:</label>
                    @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="form-group">
                    <label for="drinkType">Loại Đồ Uống:</label>
                    <select class="form-control" id="drinkType" name="CategoryId">
                        @foreach (var item in Model.Categories)
                        {
                            if (item.Selected == true)
                            {
                                <option value="@item.Value" selected>@item.Text</option>
                            }
                            else
                            {
                                <option value="@item.Value">@item.Text</option>
                            }
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label for="drinkPrice">Giá:</label>
                    @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="form-group">
                    <label for="drinkImage">Hình Ảnh:</label>
                    <img src="/@Model.Thumbnail_string"
                         width="70"
                         height="70"
                         alt="" />
                    <input type="file" class="form-control-file" id="drinkImage" name="Thumbnail">
                </div>
                <button type="submit" class="btn btn-primary">Cập nhật</button>
            </form>
        </div>
    </div>
</div>


