@model IEnumerable<trasua_web_mvc.Infracstructures.Entities.Order>

@{
    ViewBag.Title = "Hóa đơn";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<div class="pd-ltr-20">


    <div class="card-box mb-30">
        <h2 class="h4 pd-20">Danh sách đơn hàng</h2>
        <table class="data-table table nowrap">
            <thead>
                <tr>
                    <th class="table-plus datatable-nosort">Mã đơn hàng</th>
                    <th>Tên khách hàng</th>
                    <th>Ngày tạo</th>
                    <th>Địa chỉ</th>
                    <th>Phương thức thanh toán</th>
                    <th>Tổng tiền</th>
                    <th>Tên mã giảm giá</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="table-plus">
                            @item.Id
                        </td>
                        <td>
                            <h5 class="font-16">@item.Customer.FullName</h5>
                        </td>
                        <td>@item.Created</td>
                        <td>@item.Address</td>
                        <td>@item.Payment.Title</td>
                        <td>@item.Total</td>
                        <td>@item.Promotion.Name</td>

                        <td>
                            <div class="dropdown">
                                <a class="btn btn-link font-24 p-0 line-height-1 no-arrow dropdown-toggle"
                                   href="#"
                                   role="button"
                                   data-toggle="dropdown">
                                    <i class="dw dw-more"></i>
                                </a>
                                <div class="dropdown-menu dropdown-menu-right dropdown-menu-icon-list">
                                    <a class="dropdown-item" href="/admin/editOrder?id=@item.Id"><i class="dw dw-edit2"></i> Edit</a>
                                    <a class="dropdown-item" href="/admin/deleteOrder?id=@item.Id"><i class="dw dw-delete-3"></i> Delete</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>